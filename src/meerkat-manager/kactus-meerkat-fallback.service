[Unit]
Description=Kactus Meerkat Fallback
After=network.target
StartLimitIntervalSec=0

[Service]
Type=simple
Restart=on-failure
RestartSec=1
User=root
ExecStart=sudo -u kyler /usr/local/bin/cargo build --release --bin meerkat-fallback; /usr/local/bin/cargo run --release --bin meerkat-fallback
WorkingDirectory=/home/kyler/kactus-gtfs-rt/

[Install]
WantedBy=multi-user.target
